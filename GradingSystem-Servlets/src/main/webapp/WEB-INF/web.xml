<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">



    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>com.example.elearning.Controller.CourseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/course-registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/course-reg</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/course-statics</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/course-marks</url-pattern>
    </servlet-mapping>

</web-app>